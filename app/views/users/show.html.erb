<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-vertical-center">
      <h1>Welcome, <%= @user.username %> </h1>q
      <br>
      <% if @user.key %>
          <h3>Your API-key is</h3><p> <%= @user.key %> </p>
          <div class="btn btn-default" role="alert"><%= link_to "Delete key", deleteKey_path, method: :get %></div>
        <% else %>
          <h3>You do not own an API-key. Please generate a new one</h3>
          <div class="btn btn-default" role="alert"><%= link_to "Generate key", generateKey_path, method: :get %></div>
          <% end %>
      <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>
  </div>
</div>
